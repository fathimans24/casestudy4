<%- include('partials/header') %>

<h2>Edit Employee Data</h2>
<form action="/edit/<%= emp._id %>" method="POST">
  <input type="text" name="empName" value="<%= emp.empName %>" required>
  <input type="text" name="empDesgn" value="<%= emp.empDesgn %>" required>
  <input type="text" name="empLocation" value="<%= emp.empLocation %>" required>
  <input type="text" name="empSalary" value="<%= emp.empSalary %>" required>
  <button type="submit">Update</button>
</form>

